generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
  // tell Prisma which schemas exist/are allowed
  schemas  = ["workout_app"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  plans     Plan[]

    @@schema("workout_app")
}

model Plan {
  id        String   @id @default(uuid())
  title     String
  userId    String
  createdAt DateTime @default(now())
  days      Day[]
  user      User     @relation(fields: [userId], references: [id])

    @@schema("workout_app")
}

model Day {
  id        String    @id @default(uuid())
  name      String
  planId    String
  createdAt DateTime  @default(now())
  dayOrder  Int
  updatedAt DateTime  @updatedAt
  plan      Plan      @relation(fields: [planId], references: [id], onDelete: Cascade)
  sections  Section[]

    @@schema("workout_app")
}

model Section {
  id           String     @id @default(uuid())
  type         String
  dayId        String
  createdAt    DateTime   @default(now())
  sectionOrder Int
  updatedAt    DateTime   @updatedAt
  exercises    Exercise[]
  day          Day        @relation(fields: [dayId], references: [id], onDelete: Cascade)

  @@index([dayId])

    @@schema("workout_app")
}

model Exercise {
  id            String   @id @default(uuid())
  name          String
  mode          String
  sets          Int?
  reps          String?
  sectionId     String
  createdAt     DateTime @default(now())
  exerciseOrder Int
  updatedAt     DateTime @updatedAt
  timeUnit      String?
  timeValue     Int?
  section       Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index([sectionId])

    @@schema("workout_app")
}
